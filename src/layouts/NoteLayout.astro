---
import Layout from "./Layout.astro";
import { formatDate } from "../utils/dates";
import GrowthIcon from "../components/GrowthIcon.astro";
import Backlinks from "../components/Backlinks.astro";
import BackButton from "../components/BackButton.astro";
import "../styles/note-page.css";

const { frontmatter, backlinks = [] } = Astro.props;
const { title, description, updated, startDate, topics, growthStage, type = "note" } = frontmatter;

const plantedDate = startDate ? `Planted: ${formatDate(startDate)}` : '';
const tendedDate = updated ? `Last tended: ${formatDate(updated)}` : '';

const displayType = type ? type.charAt(0).toUpperCase() + type.slice(1) : "Note";
---

<Layout title={title} description={description}>
  <article class="note-container">
    <header class="note-header">
      <div class="note-top-bar">
        <BackButton />
        <div class="note-meta-right">
          {growthStage && (
            <div class="growth-badge">
              <GrowthIcon growthStage={growthStage} showEmoji={true} />
              <span class="growth-stage-text">{growthStage}</span>
            </div>
          )}
          <span class="note-type">{displayType}</span>
        </div>
      </div>
      
      <h1 class="note-title">{title}</h1>
      
      {description && <p class="note-description">{description}</p>}
      
      <div class="note-meta-container">
        <div class="note-topics">
          {topics && topics.length > 0 && topics.map((topic: string) => (
            <p class="topic-tag">{topic}</p>
          ))}
        </div>
        
        <div class="note-dates">
          {plantedDate && <div class="date-info">{plantedDate}</div>}
          {tendedDate && plantedDate !== tendedDate && <div class="date-info">{tendedDate}</div>}
        </div>
      </div>
    </header>
    
    <div class="note-content">
      <slot />
    </div>
    
    <footer class="note-footer">
      {backlinks && backlinks.length > 0 && (
        <div class="backlinks-section">
          <Backlinks backlinks={backlinks} />
        </div>
      )}
    </footer>
  </article>
</Layout>

<style is:global>
  body .note-container {
    max-width: 720px;
    margin: 0 auto;
    padding: 3rem;
    background-color: transparent !important;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
  }
  
  body .note-top-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }
  
  body .note-meta-right {
    display: flex;
    align-items: center;
    gap: 1.1rem;
  }
  
  body .note-type {
    font-size: 0.8rem;
    font-weight: 600;
    color: #6b7280;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  body .growth-badge {
    display: flex;
    align-items: center;
    gap: 0rem;
    font-weight: 600;
    font-size: 0.8rem;
    color: #6b7280;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  body .growth-badge .growth-stage-text {
    font-size: 0.8rem;
  }
  
  body .note-title {
    font-size: 2.25rem;
    line-height: 1.2;
    margin: 0 0 1rem;
    color: #1f2937;
    font-weight: 700;
    font-family: "Times New Roman", Times, serif;
  }
  
  .note-header .note-description {
    font-size: 1.1rem;
    line-height: 1.5;
    margin: 0 0 1.5rem;
    color: #6b7280;
  }
  
  body .note-meta-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    gap: 1.25rem;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #e5e7eb;
  }
  
  body .note-topics {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  body .topic-tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    font-size: 0.75rem;
    font-weight: 500;
    color: #4b5563 !important;
    text-decoration: none;
  }
  
  body .note-meta-container .note-dates {
    font-size: 0.8rem;
    color: #6b7280;
  }
  
  body .date-info {
    margin-bottom: 0.25rem;
  }
  
  body .note-content {
    font-size: 1.125rem;
    line-height: 1.7;
    color: #1f2937;
    margin-top: 2rem;
  }
  
  body .note-content a {
    color: #1f2937;
    text-decoration: none;
    border-bottom: 1px solid #1f2937;
    transition: all 0.2s ease;
  }
  
  body .note-content a:hover {
    color: #ff8c00 !important;
    border-bottom-color: #ff8c00 !important;
  }
  
  body .note-content a.wiki-link,
  body .note-content a[href^="/notes/"],
  body .note-content a[href*="bi-directional-links"],
  body .note-content a[href*="non-linear-learning"] {
    color: #1f2937 !important;
    border-bottom: 1px dotted #6b7280 !important;
  }
  
  body .note-content a.wiki-link:hover,
  body .note-content a[href^="/notes/"]:hover,
  body .note-content a[href*="bi-directional-links"]:hover,
  body .note-content a[href*="non-linear-learning"]:hover {
    color: #ff8c00 !important;
    border-bottom: 1px solid #ff8c00 !important;
  }
  
  body .note-footer {
    margin-top: 3rem;
    padding-top: 1.5rem;
  }
  
  @media (max-width: 768px) {
    body .note-container {
      padding: 1.5rem 1rem 3rem;
    }
    
    body .note-top-bar {
      margin-bottom: 1.5rem;
    }
    
    body .note-title {
      font-size: 1.75rem;
      margin-bottom: 0.75rem;
    }
    
    body .note-description {
      font-size: 1rem;
      margin-bottom: 1.25rem;
    }
    
    body .note-meta-container {
      margin-bottom: 1.5rem;
      padding-bottom: 1.25rem;
      gap: 1rem;
    }
    
    body .note-dates {
      font-size: 0.8125rem;
    }
    
    body .date-info {
      margin-bottom: 0.125rem;
    }
    
    body .note-content {
      font-size: 1rem;
      margin-top: 1.5rem;
    }
  }
  
  @media (max-width: 480px) {
    body .note-container {
      padding: 1.25rem 0.875rem 2.5rem;
    }
    
    body .note-top-bar {
      margin-bottom: 1.25rem;
    }
    
    body .note-title {
      font-size: 1.5rem;
    }
    
    body .note-meta-container {
      padding-bottom: 1rem;
    }
    
    body .topic-tag {
      padding: 0.2rem 0.6rem;
      font-size: 0.7rem;
    }
    
    body .note-content {
      font-size: 0.9375rem;
    }
  }
</style>

