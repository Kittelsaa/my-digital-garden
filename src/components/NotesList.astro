---
import { formatDate } from "../utils/dates";

type Note = {
  slug: string;
  data: {
    title: string;
    startDate?: string;
    growthStage?: string;
    type?: string;
  };
};

const { notes, showDate = true } = Astro.props;
---

<div class="notes-list-container">
  {notes.map((note: Note) => (
    <article class="note-item" data-type={note.data.type || 'note'}>
      <div class="note-meta">
        {showDate && note.data.startDate && (
          <time class="note-date">{formatDate(note.data.startDate)}</time>
        )}
        {note.data.growthStage && (
          <div class="note-status">{note.data.growthStage.toUpperCase()}</div>
        )}
        {note.data.type && (
          <div class="note-type">{note.data.type.toUpperCase()}</div>
        )}
      </div>
      <h3 class="note-title">
        <a href={`/notes/${note.slug}`}>{note.data.title}</a>
      </h3>
      <div class="note-divider"></div>
    </article>
  ))}
</div>

<style>
  .notes-list-container {
    display: flex;
    flex-direction: column;
    width: 100%;
  }

  .note-item {
    display: grid;
    grid-template-columns: 150px 1fr;
    align-items: center;
    padding: 1rem 0;
    position: relative;
  }

  .note-date {
    font-size: 0.875rem;
    color: #6b7280;
    font-family: monospace;
    text-transform: uppercase;
  }

  .note-status {
    font-size: 0.875rem;
    color: #6b7280;
    font-family: monospace;
    text-transform: uppercase;
  }

  .note-title {
    font-size: 1.125rem;
    line-height: 1.3;
    margin: 0;
    font-family: "Times New Roman", Times, serif;
    font-weight: normal;
  }

  .note-title a {
    color: #1f2937;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .note-title a:hover {
    color: #ff8c00;
    text-decoration: none;
  }

  .note-divider {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background-color: #e5e7eb;
  }

  @media (max-width: 768px) {
    .note-item {
      grid-template-columns: 100px 1fr;
      padding: 0.75rem 0;
    }

    .note-date, .note-status {
      font-size: 0.75rem;
    }

    .note-title {
      font-size: 1rem;
    }
  }

  .note-type {
    font-size: 0.75rem;
    font-weight: 600;
    color: #6b7280;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-left: 1rem;
  }
  
  .note-meta {
    display: flex;
    align-items: center;
    margin-bottom: 0.5rem;
  }
</style>
