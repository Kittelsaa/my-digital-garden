---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary';
  icon?: 'arrow' | 'logo' | 'linkedin' | 'document' | 'none';
  class?: string;
  as?: 'a' | 'button';
  type?: 'button' | 'submit' | 'reset';
}

const {
  href = '#',
  variant = 'primary',
  icon = 'none',
  class: className = '',
  as = 'a',
  type = 'button'
} = Astro.props;

const Element = as;
---

{as === 'a' ? (
  <a href={href} class:list={['home-button', variant, className]} style="font-family: 'Averia Serif Libre', serif !important;">
    <span class="button-text"><slot /></span>
    {icon === 'arrow' && <span class="icon arrow">→</span>}
    {icon === 'logo' && <span class="icon"><img src="/images/lg.png" alt="KTTLSAA Logo" class="logo-icon" /></span>}
    {icon === 'linkedin' && (
      <span class="icon linkedin">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
        </svg>
      </span>
    )}
    {icon === 'document' && (
      <span class="icon document">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/>
        </svg>
      </span>
    )}
  </a>
) : (
  <button type={type} class:list={['home-button', variant, className]} style="font-family: 'Averia Serif Libre', serif !important; cursor: pointer;">
    <span class="button-text"><slot /></span>
    {icon === 'arrow' && <span class="icon arrow">→</span>}
    {icon === 'logo' && <span class="icon"><img src="/images/lg.png" alt="KTTLSAA Logo" class="logo-icon" /></span>}
    {icon === 'linkedin' && (
      <span class="icon linkedin">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
        </svg>
      </span>
    )}
    {icon === 'document' && (
      <span class="icon document">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/>
        </svg>
      </span>
    )}
  </button>
)}

<style>
  
  .home-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1.7rem;
    border-radius: 0px;
    text-decoration: none;
    font-family: 'Averia Serif Libre', serif !important;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    min-width: 200px;
    text-align: center;
    font-weight: normal;
  }

  button{
    cursor: pointer;
  }
  
  .button-text {
    line-height: 1.2;
    font-family: 'Averia Serif Libre', serif !important;
    font-weight: 600;
  }

  .icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    margin-left: 0rem;
  }

  .arrow {
    font-size: 1.2rem;
    line-height: 1;
  }

  .logo-icon {
    height: 22px;
    width: auto;
    vertical-align: middle;
  }

  .primary {
    background-color: #FFF8F4;
    color: black;
    border: 1px solid black;
  }

  .secondary {
    background-color: #FF9B5A;
    color: black;
    border: none;
  }

</style>

<style is:global>
  .home-button,
  .home-button span,
  .home-button .button-text {
    font-family: 'Averia Serif Libre', serif !important;
  }
</style>
