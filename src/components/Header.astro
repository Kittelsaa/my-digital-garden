---
const navItems = [
  { text: 'The Garden', url: '/garden' },
  { text: 'About Me', url: '/about' }
];
---

<header>
  <div class="container">
    <div class="logo">
      <a href="/" class="site-name">
        <img src="/images/kttlsaalg.png" alt="KTTLSAA Logo" class="logo-image" />
      </a>
    </div>
    
    <button class="mobile-menu-toggle" aria-label="Toggle menu">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </button>
    
    <nav class="desktop-nav">
      <ul>
        {navItems.map(item => (
          <li>
            <a href={item.url}>{item.text}</a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
  
  <div class="mobile-nav">
    <ul>
      {navItems.map(item => (
        <li>
          <a href={item.url}>{item.text}</a>
        </li>
      ))}
    </ul>
  </div>
</header>

<script is:inline>
  const toggleBtn = document.querySelector('.mobile-menu-toggle');
  const mobileNav = document.querySelector('.mobile-nav');
  const body = document.body;

  if (toggleBtn && mobileNav) {
    toggleBtn.addEventListener('click', () => {
      toggleBtn.classList.toggle('active');
      mobileNav.classList.toggle('active');
      body.classList.toggle('menu-open');
    });
  }
</script>

<style>
  header {
    padding: 1.5rem 0;
    border-bottom: 1px solid #E8DBCF;
    background-color: #FFF8F4;
    position: sticky;
    top: 0;
    z-index: 100;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-m, 1.5rem);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .logo {
    display: flex;
    align-items: center;
  }
  
  .logo-image {
    height: 30px;
    width: auto;
  }
  
  .desktop-nav ul {
    display: flex;
    list-style: none;
    gap: 2rem;
    margin: 0;
    padding: 0;
  }
  
  .desktop-nav a {
    text-decoration: none;
    color: var(--color-text, #1f2937);
    font-weight: 600;
    transition: color 0.2s ease;
    font-size: 0.95rem;
  }
  
  .desktop-nav a:hover {
    color: var(--color-accent, #ff8c00);
  }
  
  .mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    width: 30px;
    height: 24px;
    position: relative;
    z-index: 101;
  }
  
  .bar {
    display: block;
    width: 100%;
    height: 2px;
    background-color: #1f2937;
    margin: 5px 0;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }
  
  .mobile-menu-toggle.active .bar:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }
  
  .mobile-menu-toggle.active .bar:nth-child(2) {
    opacity: 0;
  }
  
  .mobile-menu-toggle.active .bar:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }
  
  /* Mobile navigation */
  .mobile-nav {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #FFF8F4;
    padding: 5rem 2rem 2rem;
    z-index: 99;
    transform: translateY(-100%);
    transition: transform 0.3s ease;
  }
  
  .mobile-nav.active {
    transform: translateY(0);
    display: block;
  }
  
  .mobile-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    text-align: center;
  }
  
  .mobile-nav a {
    text-decoration: none;
    color: var(--color-text, #1f2937);
    font-weight: 500;
    font-size: 1.5rem;
    display: block;
    padding: 0.5rem 0;
  }
  
  .mobile-nav a:hover {
    color: var(--color-accent, #ff8c00);
  }
  
  body.menu-open {
    overflow: hidden;
  }
  
  @media (max-width: 768px) {
    .desktop-nav {
      display: none;
    }
    
    .mobile-menu-toggle {
      display: block;
    }
  }
  
  @media (min-width: 769px) {
    .mobile-nav {
      display: none !important;
    }
  }
</style>
